{
  "manifest_version": 2,
  "name": "New Tab Link Opener",
  "version": "1.0",
  "description": "Opens links from specified domains in new tabs",
  "permissions": ["storage", "tabs", "<all_urls>"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "New Tab Link Opener"
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}
